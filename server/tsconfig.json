{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015"],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": "../server/src"
  },
  "include": ["../server/src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
